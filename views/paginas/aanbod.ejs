<%- include('../partials/nav.ejs') %>

<h1>Aanbod overzicht</h1>

<section class="for-each-cards">
    <ul>
        <% initiatiefAanbod.forEach(aanbod => {
             %>
            <li>
                <a href="/detail/<%=aanbod.id%>">
                    <% if (aanbod.image) { %>
                    <img src="https://fdnd-agency.directus.app/assets/<%= aanbod.image.id %>" width="<%= aanbod.image.width %>" height="<%= aanbod.image.height %>"
        
                    alt="<%- aanbod.title %>">
                    <% } %>
               <h2> <%=aanbod.title%> </h2>
               <% if (aanbod.image) { %>
                <!-- onerror; https://github.com/users/SamaraFellaDina/projects/7/views/2?pane=issue&itemId=53408192 -->
            <% } %>     
                </a>           
             <button><a href="detail/<%=aanbod.id%>"> Meer informatie</a></button>
            </li>
        <% 
        }) %>
    </ul>
</section>

